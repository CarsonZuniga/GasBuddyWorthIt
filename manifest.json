{
  "manifest_version": 3,
  "name": "GasBuddy Worth It",
  "version": "1.0",
  "description": "Calculate estimated price to fill from a given gas station",
  // "icons": {
  //   "16": "images/icon-16.png",
  //   "32": "images/icon-32.png",
  //   "48": "images/icon-48.png",
  //   "128": "images/icon-128.png"
  // },
  "permissions": [
    "geolocation",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.gasbuddy.com/gasprices/*"
  ],
  "action": {
    "default_title": "GasBuddy Worth It Popup",
    "default_popup": "popup.html"
  }
}